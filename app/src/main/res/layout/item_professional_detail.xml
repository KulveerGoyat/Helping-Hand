<!-- item_professional_detail.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

    <ImageView
        android:id="@+id/professional_image"
        android:layout_width="200dp"
        android:background="@drawable/rounded_image"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:clipToOutline="true"
        tools:ignore="ContentDescription,UnusedAttribute" />

        <TextView
            android:id="@+id/professional_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/professional_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:justificationMode="inter_word"
        android:layout_marginTop="4dp"/>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
    <TextView
        android:id="@+id/professional_phone"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/professional_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginTop="4dp"/>

</LinearLayout>
    <Button
        android:id="@+id/button_call"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="@string/contact_us"
        tools:ignore="VisualLintButtonSize" />

    <Button
        android:id="@+id/button_schedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/schedule_booking"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        tools:ignore="VisualLintButtonSize" />
</LinearLayout>